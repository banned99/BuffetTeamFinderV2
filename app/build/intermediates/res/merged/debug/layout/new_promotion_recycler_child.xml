<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    card_view:contentPadding="5dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="ProName"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promotionLabel"
                android:layout_marginRight="10dp"
                android:layout_weight="1.38"
                android:layout_gravity="start"/>

            <TextView
                android:text="price: 290"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promotionPrice"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Max 5"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promotionMax"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

            <TextView
                android:text="expire: 2/2/2017"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promotionExpire" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                card_view:srcCompat="@drawable/promo_1"
                android:scaleType="center"
                android:id="@+id/promotionImage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Category"
                android:id="@+id/pro_catname"
                android:background="@color/colorPrimary"
                android:textColor="#FFF"
                android:layout_gravity="end"/>
        </FrameLayout>

    </LinearLayout>






</android.support.v7.widget.CardView>