<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="20dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_name"
            android:text="Promotion : "
            android:textSize="18sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_branch_name"
            android:text="Branch : "
            android:textSize="18sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deal_owner"
            android:text="Owner Name : "
            android:textSize="18sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eat_date"
            android:text="Date :"
            android:textSize="18sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eat_time"
            android:text="Time :"
            android:textSize="18sp"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/deal_member_img"
            android:padding="5dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:id="@+id/cancel_deal_button"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/icon" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:id="@+id/leave_deal_button"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/door_exit" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:id="@+id/member_button"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:src="@drawable/group"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/chat_button"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_gravity="bottom|right"
                android:src="@drawable/chat"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>